                                    @Html.Hidden("commentID", "", new { @value = 0 })
                                    @Html.TextArea("description", "", new { @class = "form-control", @rows = 2, @autocomplete = "off", @placeholder = "Your Comment" })
                                </div>
                                <div class="form-group col-md-12">
