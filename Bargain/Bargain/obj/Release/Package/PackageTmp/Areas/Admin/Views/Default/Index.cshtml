

@{ Layout = null; }
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta name="description" content="Responsive Admin Template" />
    <meta name="author" content="SmartUniversity" />
    <title>Login | Online Boutique</title>
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet" type="text/css" />
    <!-- icons -->
    <link href="~/Areas/Assets/fonts/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Areas/Assets/fonts/material-design-icons/material-icon.css" rel="stylesheet" type="text/css" />
    <!-- bootstrap -->
    <link href="~/Areas/Assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- style -->
    <link rel="stylesheet" href="~/Areas/Assets/css/pages/extra_pages.css">
    <!-- favicon -->
    <link rel="shortcut icon" href="~/Areas/Assets/img/favicon.ico" />
    <style>
        .login-btn {
            background: #33b5e5;
            color: #ffffff;
            cursor: pointer;
        }

            .login-btn:hover {
                background: #178ab4;
            }
    </style>

</head>
<body style="background-image:url('~/Areas/Assets/img/flat-bg.jpg');background-size:cover;">
    <div class="form-title">
        <h1>Login Form</h1>
    </div>
    
        <asp:ScriptManager ID="ScriptManager1" runat="server"></asp:ScriptManager>
        <!-- Login Form-->
        @using (Html.BeginForm("Index", "Default", FormMethod.Post, new { @class = "form-horizontal" }))
       
        {

            <div class="login-form text-center">
                <div class="toggle">
                    <i class="fa fa-user-plus"></i>
                </div>
                <div class="form formLogin">
                    <h2>Login to your account</h2>

                    @Html.TextBox("txtUserName", "", new { @class = "form-control", @autocomplete = "off", @placeholder = "Username" })

                    @Html.Password("txtPassword", "", new { @class = "form-control", @autocomplete = "off", @placeholder = "Password" })


                    <input type="submit" value="Log in" class="btn btn-info" />
                    @*<button type="submit" class="btn btn-default btn-sm pull-right">Login</button>*@

                </div>

            </div>
        }

     
    <!-- start js include path -->
    <script src="~/Areas/assets/plugins/jquery/jquery.min.js"></script>
    <script src="~/Areas/assets/js/pages/extra_pages/pages.js"></script>
    <!-- end js include path -->
</body>

</html>

