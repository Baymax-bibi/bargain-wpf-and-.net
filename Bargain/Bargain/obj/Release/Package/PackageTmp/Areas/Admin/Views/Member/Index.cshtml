@model Bargain.Models.MemberModel
@{
    ViewBag.Title = "BargainsList";
}


<div>
    @*<div class="page-content">*@
    <div class="page-bar">
        <div class="page-title-breadcrumb">
            <div class=" pull-left">
                <div class="page-title">Member List</div>
            </div>
            <ol class="breadcrumb page-breadcrumb pull-right">
                <li>
                    <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="~/MemberPanel/Dashboard/Index">Dashboard</a>&nbsp;<i class="fa fa-angle-right"></i>
                </li>

                <li class="active">Bargain List</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-topline-aqua">

                <div class="card-body ">

                  
                    @if (ViewBag.MemberList != null)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover table-checkable order-column" style="width: 100%" id="example4">
                                <thead>
                                    <tr>
                                        <th># </th>
                                        <th>Name </th>
                                        <th>Email </th>
                                        <th>State </th>
                                        <th>Postcode </th>
                                        <th>Registered On </th>

                                    </tr>
                                </thead>

                                <tbody>
                                    @{int i = 1;
                                        foreach (var item in ViewBag.MemberList)
                                        {
                                                                        <tr class="odd gradeX">
                                                                            <td><span>@i</span></td>
                                                                            <td>@item.FirstName @item.LastName  </td>
                                                                            <td>@item.Email</td>
                                                                            <td>@item.State</td>

                                                                            <td>@item.Postcode</td>
                                                                            <td>@item.EntryDate</td>

                                                                        </tr>
                                            i++;
                                        }
                                    }


                                </tbody>

                            </table>

                        </div>
                    }

                     



                </div>
            </div>

        </div>

    </div>
    @*</div>*@
</div>
