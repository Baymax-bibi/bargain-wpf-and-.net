@model Bargain.Models.BargainModel
@{
    ViewBag.Title = "Index";
}
<title>Bargains Master</title>
<div>

    <div class="page-bar">
        <div class="page-title-breadcrumb">
            <div class=" pull-left">
                <div class="page-title">
                    <asp:Label ID="lblHeading" runat="server"></asp:Label>
                   Add Bargain 
                </div>
            </div>
            <ol class="breadcrumb page-breadcrumb pull-right">
                <li>
                    <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="~/MemberPanel/Dashboard/Index">Dashboard</a>&nbsp;<i class="fa fa-angle-right"></i>
                </li>

                <li class="active">Add Bargain</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="card card-topline-aqua">
                <div class="card-head">
                    <div class="col-sm-6 clearfix">

                        <span style="color:red">@Html.ValidationSummary()</span>

                        <span style="color:green">
                            @ViewBag.SucessMessage
                        </span>
                        <span style="color:red">
                            @ViewBag.FailMessage
                        </span>

                    </div>
                    <header></header>
                    <div class="tools">
                        <a href="~/MemberPanel/bargain/BargainsList" class="btn btn-default btn-md  t-close btn-color fa fa-times"></a>
                    </div>
                </div>
                <div class="card-body ">

                    <div class="row">
                        <div class="offset-2  col-md-10 col-sm-10">
                            @using (Html.BeginForm("Index", "Bargain", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ID)
                                <div class="form-horizontal">

                                    <div class="form-group row">
                                        <label class="col-md-2 control-label">
                                            Heading <span style="color: red;">*</span>&nbsp;
                                        </label>
                                        <div class="input-group  col-md-6">
                                            @*@Html.TextBox("Heading", "", new { @class = "form-control valid", @data_val = "true", @data_val_required = "Required" })*@
                                            @Html.TextBoxFor(x => x.Heading, new { @class = "form-control", @AutoComplete = "off" })
                                        </div>
                                        <div class="col-md-4">
                                            @Html.ValidationMessageFor(x => x.Heading, "", new { @class = "text-danger" })
                                            @*<span class="field-validation-valid text-danger" data-valmsg-for="Heading" data-valmsg-replace="true"></span>*@
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-2 control-label">
                                            Description<span style="color: red;">*</span>&nbsp;
                                        </label>
                                        <div class="input-group  col-md-6">
                                            @Html.TextAreaFor(x => x.Description,new { @class = "form-control", @AutoComplete = "off" })
                                            @*@Html.TextBox("Description", "", new { @class = "form-control valid", @data_val = "true", @data_val_required = "Required" })*@
                                        </div>
                                        <div class="col-md-4">
                                            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
                                            @*<span class="field-validation-valid text-danger" data-valmsg-for="Description" data-valmsg-replace="true"></span>*@
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-2 control-label">
                                            Special Type  <span style="color: red;">*</span>&nbsp;
                                        </label>
                                        <div class="input-group  col-md-6">
                                            @*@Html.DropDownList("ddlSpecialType", ViewBag.SpecialTypeList as SelectList, "Select Special Type", new { @class = "form-control valid", @data_val = "true", @data_val_required = "Required" })*@
                                            @Html.DropDownListFor(model => model.SpecialType, new SelectList(Model.listSpecialTypeModel, "Id", "Descr"), "- Select Special Type -", new { @class = "form-control" })
                                        </div>
                                        <div class="col-md-4">
                                            @Html.ValidationMessageFor(x => x.SpecialType, "", new { @class = "text-danger" })
                                            @*<span class="field-validation-valid text-danger" data-valmsg-for="ddlSpecialType" data-valmsg-replace="true"></span>*@
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-2 control-label">
                                            Image <span style="color: red;">*</span>&nbsp;
                                        </label>
                                        <div class="input-group  col-md-6">
                                            @Html.TextBoxFor(x => x.ImagePath, new { type = "file", @class = "form-control", @AutoComplete = "off",@multiple=true })
                                            
                                            @*<input type="file" name="ImagePath" multiple="multiple" id="ImagePath" />*@
                                          
                                        </div>
                                        <div class="col-md-4">                                            
                                            @Html.ValidationMessageFor(x => x.ImagePath, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-2 control-label">
                                            URL
                                        </label>
                                        <div class="input-group  col-md-6">
                                            @Html.TextBoxFor(x => x.URL, new { @class = "form-control", @AutoComplete = "off" })
                                            @*@Html.TextBox("URL", "", new { @class = "form-control", @autocomplete = "off" })*@
                                        </div>
                                        <div class="col-md-4">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-2 control-label">
                                            StartDate
                                        </label>
                                        <div class="input-group date form_date col-md-6" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                            @*@Html.TextBox("StartDate", "", new { @class = "form-control", @autocomplete = "off", @Value = DateTime.Now.ToString("dd MMMM yyyy") })*@
                                            @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control", @Value = DateTime.Now.ToString("dd MMMM yyyy") })
                                            <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                        </div>
                                        <input type="hidden" id="dtp_input2" value="" />
                                        <br />
                                        <div class="col-md-4">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-2 control-label">
                                            EndDate
                                        </label>
                                        <div class="input-group date form_date col-md-6" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                            @*@Html.TextBox("EndDate", "", new { @class = "form-control", @autocomplete = "off", @Value = DateTime.Now.ToString("dd MMMM yyyy") })*@
                                            @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control", @Value = DateTime.Now.ToString("dd MMMM yyyy") })

                                            <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                                        </div>
                                        <input type="hidden" id="dtp_input2" value="" />
                                        <br />
                                        <div class="col-md-4">
                                        </div>
                                    </div>


                                    <div class="form-group row">
                                        <label class="col-md-2 control-label">
                                            Promocode
                                        </label>
                                        <div class="input-group  col-md-6">
                                            @Html.TextBoxFor(x => x.Promocode, new { @class = "form-control", @AutoComplete = "off" })
                                            @*@Html.TextBox("Promocode", "", new { @class = "form-control", @autocomplete = "off" })*@
                                        </div>
                                        <div class="col-md-4">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-2 control-label">
                                            Tags
                                        </label>
                                        <div class="input-group  col-md-6">
                                            @Html.TextBoxFor(x => x.Tags, new { @class = "form-control", @AutoComplete = "off" })
                                            @*@Html.TextBox("Tags", "", new { @class = "form-control", @autocomplete = "off" })*@
                                        </div>
                                        <div class="col-md-4">
                                        </div>
                                    </div>

                                    @*<div class="form-group">
                                        <div class="col-sm-12">
                                            @Html.CheckBox("chk", new { @value = "I Agree to the bargain Terms & Conditions" })
                                            <label>I Agree to the bargain Terms & Conditions</label>

                                        </div>
                                    </div>*@

                                    <div class="form-group row">
                                        <label class="col-md-2 control-label">
                                            @*Free*@
                                        </label>
                                        <div class="input-group  col-md-6">
                                            @*@Html.CheckBox("chk", new { @value = "I Agree to the bargain Terms & Conditions" })*@
                                            @Html.CheckBoxFor(x => x.Free)
                                            <label> &nbsp; Free</label>
                                        </div>
                                        <div class="col-md-4">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="input-group offset-2 col-md-6">
                                            <input type="submit" value="Save" class="btn btn-info" />
                                            @*<asp:Button ID="btnSave" runat="server" Text="Save" CssClass="btn btn-info " OnClick="btnSave_Click" />*@
                                            &nbsp;
                                            <asp:Label ID="lblid" runat="server" Text="0" Visible="false"></asp:Label>
                                            <a href="~/MemberPanel/Bargain/BargainsList" class="btn btn-default" style="color: black">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


